<div class='container-fluid p-3'>
  <div class='row'>
    <div class='col-sm-4 col-md-2'>
      <div class='btn'>
        <h5>Category</h5>
      </div>
    </div>    
    <div class='row col-sm-8 col-md-10m mt-2 cate_list'>
      <% @categories.each do |category| %>
        <% if category.products.size >= 1 %>
          <%= link_to '#'+category.name do %>
            <h6 class='ml-2'>
              <span class="badge badge-pill badge-info">
                <%= category.name %>
                <%= category.products.count %>
              </span>
            </h6>
          <% end %>
        <% else %>
          <%= link_to 'javascript:void(0)' do %>
            <h6 class='ml-2'>
              <span class="badge badge-pill badge-info">
                <%= category.name %>
                <%= category.products.count %>
              </span>
            </h6>
          <% end %>
        <% end %>  
      <% end %>
      <%= link_to categories_path, class: 'text-success ml-2',  data: { toggle: 'modal', target: '#memberCategoriesModal-lg', remote: true } do %>
        <b>+</b>
      <% end %>
    </div>  
  </div>
</div>
